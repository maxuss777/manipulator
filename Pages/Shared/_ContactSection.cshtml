@using Manipulator.Models
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IViewLocalizer Localizer
@inject IOptions<AppSettings> _appSettings
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>@Localizer["Contacts"]</h2>
            <p>@Localizer["Contact us"]</p>
        </div>
        <div class="row mt-5">
            <div class="col-lg-4">
                <div class="info">
                    <div class="location">
                        <i class="bi bi-envelope"></i>
                        <h4>@Localizer["Email"]:</h4>
                        <p>@_appSettings.Value.Email</p>
                    </div>
                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>@Localizer["Phone"]:</h4>
                        <p>@_appSettings.Value.PhoneUMC</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 mt-5 mt-lg-0">
                <form action="forms/contact.php" method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="name" class="form-control" id="name" placeholder="@Localizer["Name"]" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" name="email" id="email" placeholder="@Localizer["Email"]" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" name="subject" id="subject" placeholder="@Localizer["Subject"]" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="@Localizer["Message"]" required></textarea>
                    </div>
                    <div class="my-3">
                        <div class="loading">@Localizer["Loading"] ...</div>
                        <div class="error-message"></div>
                        <div class="sent-message">@Localizer["Your message has been sent. Thank you!"]</div>
                    </div>
                    <div class="text-center"><button type="submit">@Localizer["Send"]</button></div>
                </form>
            </div>
        </div>
    </div>
</section>